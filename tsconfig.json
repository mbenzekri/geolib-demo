{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "allowJs": true
  },
  "include": [
    "src"
  ]
}
